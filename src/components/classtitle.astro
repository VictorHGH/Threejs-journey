---
export interface Props {
  title: string;
}
const {title} = Astro.props;
---

<h1>{title}</h1>

<canvas class="webgl"></canvas>

<style>
  h1 {
    text-align: center;
    margin: 10px auto;
    min-width: 600px;
  }

  .webgl {
    display: block;
    margin: auto;
    padding: 10px;
  }
</style>
